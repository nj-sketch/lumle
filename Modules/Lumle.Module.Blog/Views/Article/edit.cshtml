@using Lumle.Module.Blog.ViewModels
@model ArticleVM

@{
    ViewData["Title"] = "Edit Article";
}

<div class="breadcrumb-section clearfix">
    <ol class="breadcrumb">
        <li class="module">@Localizer[LabelConstants.Blog]</li>
        <li><a asp-action="Index" asp-controller="Article">@Localizer[LabelConstants.Article]</a></li>
        <li class="active">@Localizer[LabelConstants.Edit]</li>
    </ol>
</div>

@Html.Partial("_MessagePanel")

<div class="panel">
    <h3 class="title-hero title-setting"> Edit Blog </h3>
    <div class="panel-body custom-panel">
        <div class="example-box-wrapper">
            <form id="mainForm" enctype="multipart/form-data" class="form-horizontal bordered-row" asp-action="edit" method="post" data-parsley-validate novalidate>
                @Html.HiddenFor(x => x.Id)
                <div class="row">
                    <div class="col-md-12 main-section">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">@Localizer[LabelConstants.Title] <span class="text-danger">*</span></label>
                            <div class="col-sm-6">
                                <input asp-for="Title" type="text" class="form-control" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Content</label>
                            <div class="col-sm-6">
                                <textarea asp-for="Content" row="10" aria-label="Content"></textarea>
                            </div>
                        </div>

                        <div class="form-group form-section">
                            <label class="col-sm-3 control-label">Featured Image<span class="text-danger"></span></label>
                            @if (!string.IsNullOrEmpty(Model.FeaturedImageUrl))
                            {
                                <div class="col-sm-2">
                                    <img src="@Model.FeaturedImageUrl" class="img-responsive" alt="Featured Image" />
                                </div>

                                <div class="col-sm-offset-1 col-sm-3">
                                    <label class="col-sm-offset-1 col-sm-4 control-label" style="text-align:left; margin-bottom:2%;">Update Feature Image</label>
                                    <input type="file" class="form-control" data-parsley-pattern="/\.(jpg|jpeg|png)$/i" data-parsley-error-message="Only jpeg, jpg, png supported." asp-for="FeaturedImage" accept="image/png,image/jpg,image/jpeg">
                                </div>
                            }
                            else
                            {
                                <div class="col-sm-2">
                                    <input type="file" class="form-control" data-parsley-pattern="/\.(jpg|jpeg|png)$/i" data-parsley-error-message="Only jpeg, jpg, png supported." asp-for="FeaturedImage">
                                </div>
                            }
                        </div>

                        <div class="form-group form-section">
                            <div class="col-sm-9">
                                <div class="pull-right">
                                    <a class="btn btn-default btn-cancel btn-sm" href="~/blog/article">@Localizer[LabelConstants.Cancel]</a>
                                    <button type="submit" class="btn btn-success custom-btn btn-sm">Save Changes</button>
                                    <img id="loadingImg" style="width: 30px; display:none;" src="~/assets/images/spinner/loader-dark.gif" alt="loading image">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </form>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/lib/tinymce/tinymce.min.js"></script>
    <script type="text/javascript" src="~/blog/js/blog-custom.js"></script>
    <script type="text/javascript" src="~/assets/widgets/parsley/parsley.js"></script>

}